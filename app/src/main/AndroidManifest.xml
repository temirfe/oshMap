<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="kg.prosoft.oshmapreport">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera2"
        android:required="false" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission
        android:name="android.permission.READ_PHONE_STATE"
        tools:node="remove" />
    <!-- <uses-permission android:name="android.permission.REAL_GET_TASKS" /> i don't know why I added this -->

    <supports-screens android:largeScreens="true" />
    <supports-screens android:xlargeScreens="true" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name_short"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        
        <meta-data android:name="android.max_aspect" android:value="2.1" />

        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".IncidentViewActivity" />
        <activity android:name=".SelectCategoryActivity" />
        <activity
            android:name=".FilterActivity"
            android:label="Фильтр" />
        <activity
            android:name=".AboutActivity"
            android:label="@string/about" />
        <activity
            android:name=".FeedbackActivity"
            android:label="@string/feedback" />
        <activity
            android:name=".FeedsActivity"
            android:label="@string/news" />
        <activity
            android:name=".FeedViewActivity"
            android:label="@string/news" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".AccountActivity"
            android:label="@string/my_account" />
        <activity
            android:name=".RegisterActivity"
            android:label="@string/register" />
        <activity android:name=".GalleryActivity" />
        <activity
            android:name=".MapsActivity"
            android:label="@string/on_map"
            android:parentActivityName=".IncidentViewActivity"
            android:theme="@style/Theme.AppCompat.Light">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".IncidentViewActivity" />
        </activity>
        <activity
            android:name=".SetLocationActivity"
            android:label="@string/on_map"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.AppCompat.Light">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <!-- Firebase Notifications -->
        <service android:name=".utils.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".utils.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <!-- ./Firebase Notifications -->

        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/SplashTheme"></activity>
        <activity android:name=".HomeActivity"
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>